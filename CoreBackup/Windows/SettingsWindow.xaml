<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="CoreBackup.Windows.SettingsWindow"
        Width="500" Height="200"
        Title="Settings">
  <ScrollViewer>
    <Grid RowDefinitions="Auto,Auto,Auto">
      <TextBlock Grid.Row="0" TextAlignment="Center">Settings</TextBlock>
      <StackPanel Grid.Row="1">
        <TextBlock>Theme</TextBlock>
        <RadioButton Margin="10,10,0,0">Dark</RadioButton>
        <RadioButton Margin="10,10,0,0">Light</RadioButton>
      </StackPanel>
      <StackPanel Grid.Row="2" Margin="0,10,0,0">
        <TextBlock>Connection</TextBlock>
      </StackPanel>
    </Grid>
  </ScrollViewer>
</Window>
