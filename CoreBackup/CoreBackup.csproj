<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
  </PropertyGroup>
  <ItemGroup>
    <Folder Include="Models\" />
    <Compile Update="**\*.xaml.cs">
      <DependentUpon>%(Filename)</DependentUpon>
    </Compile>
    <AvaloniaResource Include="**\*.xaml">
      <SubType>Designer</SubType>
    </AvaloniaResource>
    <AvaloniaResource Include="Assets\**" />
  </ItemGroup>
  <ItemGroup>
    <AvaloniaResource Remove="Assets\Image1.png" />
    <AvaloniaResource Remove="Assets\mem.jpg" />
    <AvaloniaResource Remove="Views\AdvancedView.xaml" />
    <AvaloniaResource Remove="Views\EventLogView.xaml" />
    <AvaloniaResource Remove="Views\ScreenView.xaml" />
    <AvaloniaResource Remove="Views\SplashView.xaml" />
    <AvaloniaResource Remove="Views\TestScreenView.xaml" />
  </ItemGroup>
  <ItemGroup>
    <None Remove="Assets\Image1.png" />
    <None Remove="Assets\mem.jpg" />
    <None Remove="Views\AdvancedView.xaml" />
    <None Remove="Views\EventLogView.xaml" />
    <None Remove="Views\ScreenView.xaml" />
    <None Remove="Views\SplashView.xaml" />
    <None Remove="Views\TestScreenView.xaml" />
    <None Include="Views\ConfigurationView.xaml">
      <Generator>MSBuild:Compile</Generator>
    </None>
    <None Include="Views\ContainerView.xaml">
      <Generator>MSBuild:Compile</Generator>
    </None>
  </ItemGroup>
  <ItemGroup>
    <Content Include="Assets\Image1.png" />
    <Content Include="Assets\mem.jpg" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Avalonia" Version="0.9.4" />
    <PackageReference Include="Avalonia.Desktop" Version="0.9.4" />
    <PackageReference Include="Avalonia.ReactiveUI" Version="0.9.4" />
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="Views\ScreenView.xaml">
      <Generator>MSBuild:Compile</Generator>
    </EmbeddedResource>
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="Views\TestScreenView.xaml">
      <Generator>MSBuild:Compile</Generator>
    </EmbeddedResource>
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="Views\SplashView.xaml">
      <Generator>MSBuild:Compile</Generator>
    </EmbeddedResource>
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="Views\EventLogView.xaml">
      <Generator>MSBuild:Compile</Generator>
    </EmbeddedResource>
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="Views\AdvancedView.xaml">
      <Generator>MSBuild:Compile</Generator>
    </EmbeddedResource>
  </ItemGroup>
</Project>
