<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:CoreBackup.ViewModels;assembly=CoreBackup"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="CoreBackup.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="CoreBackup">

  <Design.DataContext>
    <vm:MainWindowViewModel/>

  </Design.DataContext>

  <Grid RowDefinitions="20, *, 30" ShowGridLines="True">
    <Menu Grid.Row="0">
      <MenuItem Header="_Plik">
        <MenuItem Header="_Open"/>
        <Separator/>
        <MenuItem Header="_Exit"/>
      </MenuItem>
      <MenuItem Header="_O programie">
        <MenuItem Header="_Autorzy"/>
      </MenuItem>
    </Menu>
    <Grid Grid.Row="1" RowDefinitions="*" ColumnDefinitions="*,*" ShowGridLines="True">
      <StackPanel Grid.Column="0">
        <Button>Test</Button>
        <Image MaxHeight="100" Source="/Assets/avalonia-logo.ico"></Image>
      </StackPanel>
    </Grid>
    <WrapPanel Grid.Row="2" VerticalAlignment="Center">
      <TextBlock Text="Connected = true"></TextBlock>
      <TextBlock Text="Cześć"></TextBlock>
      <ComboBox>
        <ComboBoxItem >item 1</ComboBoxItem>
      </ComboBox>
    </WrapPanel>
  </Grid>

</Window>
